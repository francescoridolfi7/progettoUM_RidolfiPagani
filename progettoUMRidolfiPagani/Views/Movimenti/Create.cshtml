@model progettoUMRidolfiPagani.ViewModels.MovimentoViewModel

@{
    ViewData["Title"] = "Registra Nuovo Movimento";
}

<h1>Registra Nuovo Movimento</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ArticoloId" class="control-label">Articolo</label>
        <select asp-for="ArticoloId" class="form-control" asp-items="ViewBag.Articoli"></select>
        <span asp-validation-for="ArticoloId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TipoMovimento" class="control-label">Tipo Movimento</label>
        <select asp-for="TipoMovimento" class="form-control">
            <option value="Ingresso">Ingresso</option>
            <option value="Uscita">Uscita</option>
            <option value="Spostamento">Spostamento</option>
        </select>
        <span asp-validation-for="TipoMovimento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantita" class="control-label"></label>
        <input asp-for="Quantita" class="form-control" />
        <span asp-validation-for="Quantita" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PosizioneInizialeId" class="control-label">Posizione Iniziale</label>
        <select asp-for="PosizioneInizialeId" class="form-control" asp-items="ViewBag.Posizioni"></select>
        <span asp-validation-for="PosizioneInizialeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PosizioneFinaleId" class="control-label">Posizione Finale</label>
        <select asp-for="PosizioneFinaleId" class="form-control" asp-items="ViewBag.Posizioni"></select>
        <span asp-validation-for="PosizioneFinaleId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Registra" class="btn btn-primary" />
        <a href="@Url.Action("Index")" class="btn btn-secondary">Annulla</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
