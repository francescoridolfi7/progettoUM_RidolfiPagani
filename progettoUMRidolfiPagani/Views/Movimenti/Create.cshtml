@model progettoUMRidolfiPagani.Models.Movimento

@{
    ViewData["Title"] = "Crea Movimento";
}

<h1>Crea Nuovo Movimento</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="DataMovimento" class="control-label"></label>
        <input asp-for="DataMovimento" class="form-control" />
        <span asp-validation-for="DataMovimento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantita" class="control-label"></label>
        <input asp-for="Quantita" class="form-control" />
        <span asp-validation-for="Quantita" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TipoMovimento" class="control-label"></label>
        <input asp-for="TipoMovimento" class="form-control" />
        <span asp-validation-for="TipoMovimento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArticoloId" class="control-label"></label>
        <input asp-for="ArticoloId" class="form-control" />
        <span asp-validation-for="ArticoloId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PosizioneId" class="control-label"></label>
        <input asp-for="PosizioneId" class="form-control" />
        <span asp-validation-for="PosizioneId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Crea" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Torna alla lista</a>
</div>
