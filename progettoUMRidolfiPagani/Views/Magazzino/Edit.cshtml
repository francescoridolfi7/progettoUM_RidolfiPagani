@model progettoUMRidolfiPagani.Models.Posizione

@{
    ViewData["Title"] = "Modifica Postazione";
}

<h1>Modifica Postazione</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nome" class="control-label">Nome Postazione</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descrizione" class="control-label">Descrizione</label>
        <textarea asp-for="Descrizione" class="form-control"></textarea>
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salva modifiche" class="btn btn-primary" />
        <a href="@Url.Action("Index")" class="btn btn-secondary">Annulla</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
