@model IEnumerable<progettoUMRidolfiPagani.Models.Movimento>

    <h1>Storico Movimenti per Articolo</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Data Movimento</th>
                <th>Quantità</th>
                <th>Posizione Iniziale</th>
                <th>Posizione Finale</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movimento in Model)
            {
                <tr>
                    <td>@movimento.DataMovimento</td>
                    <td>@movimento.Quantita</td>
                    <td>@movimento.PosizioneIniziale?.Id</td>
                    <td>@movimento.PosizioneFinale?.Id ?? "N/A"</td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Tempo totale permanenza in magazzino</h3>
    <p>
        @Model.FirstOrDefault()?.Articolo.Codice ha trascorso
        @((Model.LastOrDefault()?.Articolo.DataUscita - Model.FirstOrDefault()?.Articolo.DataArrivo)?.TotalDays ?? 0) giorni in magazzino.
    </p>
</div>
