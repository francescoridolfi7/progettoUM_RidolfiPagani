@model progettoUMRidolfiPagani.Models.Articolo

@{
    ViewData["Title"] = $"Storico Movimenti - {Model.Codice}";
}

<h1>Storico Movimenti per @Model.Codice - @Model.Descrizione</h1>

@if (Model.Movimenti != null && Model.Movimenti.Any())
{
<table class="table">
    <thead>
        <tr>
            <th>Data Movimento</th>
            <th>Tipo Movimento</th>
            <th>Quantità</th>
            <th>Posizione Iniziale</th>
            <th>Posizione Finale</th>
            <th>Tempo di Permanenza</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movimento in Model.Movimenti)
        {
        <tr>
            <td>@movimento.DataMovimento.ToString("dd/MM/yyyy")</td>
            <td>@movimento.TipoMovimento</td>
            <td>@movimento.Quantita</td>
            <td>@movimento.PosizioneIniziale?.Nome</td>
            <td>@movimento.PosizioneFinale?.Nome</td>
            <td>
                @if (movimento.TempoDiPermanenza.HasValue)
                    {
                @($"{movimento.TempoDiPermanenza.Value.TotalDays} giorni")
                    }
                    else
                    {
                <span>In corso</span>
                    }
            </td>
        </tr>
        }
    </tbody>
</table>
}
else
{
<p>Non ci sono movimenti registrati per questo articolo.</p>
}

<p>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Torna all'elenco articoli</a>
</p>
