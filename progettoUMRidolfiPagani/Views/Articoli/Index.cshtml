@model progettoUMRidolfiPagani.ViewModels.ArticoliViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="articoli">
    <h1>Elenco Articoli</h1>

    <!-- Form per la ricerca -->
    <form @@submit.prevent="searchByCodice">
        <input type="text" v-model="codice" placeholder="Cerca per codice">
        <button type="submit">Cerca</button>
    </form>

    <form @@submit.prevent="searchByPosizione">
        <input type="text" v-model="posizione" placeholder="Cerca per posizione">
        <button type="submit">Cerca</button>
    </form>

    <button @@click="searchArticoloPiuVecchio">Articolo più vecchio</button>

    <!-- Mostra totale articoli e articoli difettosi -->
    <p>Totale articoli: {{ totaleArticoli }}</p>
    <p>Articoli difettosi: {{ articoliDifettosi }}</p>

    <div class="container">
        <div class="d-flex justify-content-end">
            <a href="../Dashboard/index" class="btn btn-primary">Visualizza la Dashboard</a>
        </div>
    </div>


    <p>
        <a href="/Articoli/Create">Registra Nuovo Articolo</a>
    </p>

    <div id="articoli">
        <h3>Lista degli Articoli</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Codice</th>
                    <th>Descrizione</th>
                    <th>Quantità</th>
                    <th>Posizione</th>
                    <th>Azioni</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="articolo in articoli" :key="articolo.id">
                    <td>{{ articolo.codice }}</td>
                    <td>{{ articolo.descrizione }}</td>
                    <td>{{ articolo.quantita }}</td>
                    <td>{{ articolo.codicePosizione }}</td>
                    <td>
                        <a :href="`/Articoli/Edit/${articolo.id}`" v-if="articolo.stato !== 'Reparto'" class="btn btn-primary">Sposta</a>
                        <a :href="`/Articoli/Delete/${articolo.id}`" v-if="articolo.stato !== 'Reparto'" class="btn btn-primary">Uscita</a>
                        <a :href="`/Articoli/Details/${articolo.id}`" class="btn btn-primary">Dettagli Movimenti</a>
                    </td>
                </tr>

            </tbody>
        </table>
    </div>



    <h2>Articoli in esaurimento</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Codice</th>
                <th>Descrizione</th>
                <th>Quantità</th>
                <th>Posizione</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="articolo in articoliInEsaurimento" :key="articolo.id">
                <td>{{ articolo.codice }}</td>
                <td>{{ articolo.descrizione }}</td>
                <td>{{ articolo.quantita }}</td>
                <td>{{ articolo.codicePosizione }}</td>
                <td>
                    <a :href="`/Articoli/Edit/${articolo.id}`" v-if="articolo.stato !== 'Reparto'" class="btn btn-primary">Sposta</a>
                    <a :href="`/Articoli/Delete/${articolo.id}`" v-if="articolo.stato !== 'Reparto'" class="btn btn-primary">Uscita</a>
                    <a :href="`/Articoli/Details/${articolo.id}`" class="btn btn-primary">Dettagli Movimenti</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/vue@3"></script>
<script src="/js/articoli.js"></script>
