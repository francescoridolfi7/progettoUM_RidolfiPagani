@model progettoUMRidolfiPagani.ViewModels.ArticoliViewModel

@{
    ViewData["Title"] = "Index";
}

<div id="articoli">
    <h1>Elenco Articoli</h1>

    <!-- Form per la ricerca -->
    <form @@submit.prevent="searchByCodice">
        <input type="text" v-model="codice" placeholder="Cerca per codice">
        <button type="submit">Cerca</button>
    </form>

    <form @@submit.prevent="searchArticoli">
        <input type="text" v-model="searchString" placeholder="Cerca articoli">
        <button type="submit">Cerca</button>
    </form>

    <!-- Mostra totale articoli e articoli difettosi -->
    <p>Totale articoli: {{ totaleArticoli }}</p>
    <p>Articoli difettosi: {{ articoliDifettosi }}</p>

    <p>
        <a href="/Articoli/Create">Registra Nuovo Articolo</a>
    </p>

    <div id="articoli">
        <h3>Lista degli Articoli</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Codice</th>
                    <th>Descrizione</th>
                    <th>Quantità</th>
                    <th>Posizione</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="articolo in articoli" :key="articolo.id">
                    <td>{{ articolo.codice }}</td>
                    <td>{{ articolo.descrizione }}</td>
                    <td>{{ articolo.quantita }}</td>
                    <td>{{ articolo.codicePosizione }}</td>
                </tr>
            </tbody>
        </table>
    </div>



    <h2>Articoli in esaurimento</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Codice</th>
                <th>Descrizione</th>
                <th>Quantità</th>
                <th>Posizione</th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="articolo in articoliInEsaurimento" :key="articolo.id">
                <td>{{ articolo.codice }}</td>
                <td>{{ articolo.descrizione }}</td>
                <td>{{ articolo.quantita }}</td>
                <td>{{ articolo.codicePosizione }}</td>
            </tr>
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/vue@3"></script>
<script src="/js/articoli.js"></script>
