@model progettoUMRidolfiPagani.Models.Articolo

@{
    ViewData["Title"] = "Cancella Articolo";
}

<h1>Cancella Articolo</h1>

<h3>Sei sicuro di voler cancellare questo articolo?</h3>

<div>
    <h4>Articolo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Codice Articolo
        </dt>
        <dd class="col-sm-10">
            @Model.Codice
        </dd>
        <dt class="col-sm-2">
            Descrizione
        </dt>
        <dd class="col-sm-10">
            @Model.Descrizione
        </dd>
        <dt class="col-sm-2">
            Quantità
        </dt>
        <dd class="col-sm-10">
            @Model.Quantita
        </dd>
        <dt class="col-sm-2">
            Posizione
        </dt>
        <dd class="col-sm-10">
            @Model.Posizione.Nome
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Cancella" class="btn btn-danger" /> |
        <a href="@Url.Action("Index")" class="btn btn-secondary">Annulla</a>
    </div>
</form>
